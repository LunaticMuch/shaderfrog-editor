{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      // "@core/*": ["../core-shaderfrog/src/*"],
      // For parity with site imports
      "@model/*": ["./src/model/*"],
      "@editor/*": ["./src/*"],
      "@api/*": ["./src/api/*"],
      "@util/*": ["./src/util/*"],
    },
    "composite": true,
    "noEmit": false,
    "incremental": true
  },
  "composite": true,
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
